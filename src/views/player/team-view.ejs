<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div
          class="card-header bg-primary text-white d-flex justify-content-between align-items-center"
        >
          <h3 class="mb-0"><i class="fas fa-users"></i> <%= team.name %></h3>
          <div>
            <% if (team.slug) { %>
            <span class="badge bg-light text-dark">@<%= team.slug %></span>
            <% } %>
            <span class="badge bg-info"><%= team.team_size %>-a-side</span>
          </div>
        </div>
        <div class="card-body">
          <% if (team.description) { %>
          <div class="alert alert-light">
            <p class="mb-0"><%= team.description %></p>
          </div>
          <% } %>

          <!-- Team Stats -->
          <div class="row mb-4">
            <div class="col-md-3">
              <div class="card text-center">
                <div class="card-body">
                  <h5 class="card-title text-primary"><%= members.length %></h5>
                  <p class="card-text">Members</p>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card text-center">
                <div class="card-body">
                  <h5 class="card-title text-success">
                    <%= stats.total_goals || 0 %>
                  </h5>
                  <p class="card-text">Total Goals</p>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card text-center">
                <div class="card-body">
                  <h5 class="card-title text-info">
                    <%= stats.total_attempts || 0 %>
                  </h5>
                  <p class="card-text">Total Attempts</p>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card text-center">
                <div class="card-body">
                  <h5 class="card-title text-warning">
                    <%= stats.total_attempts > 0 ? Math.round((stats.total_goals
                    / stats.total_attempts) * 100) : 0 %>%
                  </h5>
                  <p class="card-text">Success Rate</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Team Members -->
          <div class="card mb-4">
            <div
              class="card-header d-flex justify-content-between align-items-center"
            >
              <h5 class="mb-0">Team Members</h5>
              <span class="badge bg-primary"
                ><%= members.length %>/<%= team.team_size %></span
              >
            </div>
            <div class="card-body">
              <div class="row">
                <% members.forEach(member => { %>
                <div class="col-md-6 col-lg-4 mb-3">
                  <div
                    class="card <%= member.is_captain ? 'border-warning' : '' %>"
                  >
                    <div class="card-body text-center">
                      <h6 class="card-title">
                        <%= member.name %> <% if (member.is_captain) { %>
                        <span class="badge bg-warning ms-1">
                          <i class="fas fa-crown"></i> Captain
                        </span>
                        <% } %>
                      </h6>
                      <p class="card-text text-muted">
                        <%= member.residence %><br />
                        <small><%= member.age_group %></small>
                      </p>
                      <% if (member.goals > 0) { %>
                      <div class="text-success">
                        <i class="fas fa-futbol"></i> <%= member.goals %> goals
                      </div>
                      <% } %>
                    </div>
                  </div>
                </div>
                <% }) %>
              </div>
            </div>
          </div>

          <!-- Action Buttons -->
          <div class="d-flex justify-content-between">
            <a href="/player/dashboard" class="btn btn-outline-secondary">
              <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>

            <div>
              <% if (isCaptain) { %>
              <button
                class="btn btn-warning me-2"
                data-bs-toggle="modal"
                data-bs-target="#teamSettingsModal"
              >
                <i class="fas fa-cog"></i> Team Settings
              </button>
              <% } %> <% if (isMember && !isCaptain) { %>
              <form
                method="POST"
                action="/player/teams/leave"
                class="d-inline"
                onsubmit="return confirm('Are you sure you want to leave this team?')"
              >
                <input type="hidden" name="teamId" value="<%= team.id %>" />
                <button type="submit" class="btn btn-outline-danger">
                  <i class="fas fa-sign-out-alt"></i> Leave Team
                </button>
              </form>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
