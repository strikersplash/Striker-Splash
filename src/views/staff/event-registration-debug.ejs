<!-- Simplified Event Registration Management Interface for Debugging -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">Event Registration Management (Debug)</h3>
        </div>
        <div class="card-body">
          <div class="alert alert-info">
            <i class="bi bi-info-circle-fill"></i> This is a simplified
            debugging interface.
          </div>

          <!-- Test Button -->
          <div class="mb-3">
            <button
              type="button"
              class="btn btn-primary test-btn"
              onclick="testApiCall()"
            >
              Test API Call
            </button>
          </div>

          <!-- Events List -->
          <div id="events-list">
            <h4 class="mb-3">Events</h4>
            <div class="table-responsive">
              <table class="table table-striped">
                <thead class="table-dark">
                  <tr>
                    <th>Event Name</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody id="events-table">
                  <tr>
                    <td colspan="2" class="text-center">Loading events...</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>

          <!-- Results Area -->
          <div class="mt-4">
            <h4>API Response</h4>
            <pre id="api-result" class="bg-light p-3 border rounded">
No API response yet</pre
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    console.log("Debug page loaded");

    // Get DOM elements
    const eventsTable = document.getElementById("events-table");
    const apiResult = document.getElementById("api-result");

    // Test API call function
    window.testApiCall = function () {
      console.log("Testing API call");
      apiResult.textContent = "Making API request...";

      fetch("/staff/events-with-registrations")
        .then((response) => {
          console.log("Response status:", response.status);
          return response.json();
        })
        .then((data) => {
          console.log("API response:", data);
          apiResult.textContent = JSON.stringify(data, null, 2);

          // If successful, load events
          if (data.success && data.events) {
            loadEvents(data.events);
          }
        })
        .catch((error) => {
          console.error("API error:", error);
          apiResult.textContent = "Error: " + error;
        });
    };

    // View registrations function
    window.viewRegistrations = function (eventId) {
      console.log("Viewing registrations for event:", eventId);
      apiResult.textContent = "Fetching registrations...";

      fetch(`/staff/registered-players/${eventId}`)
        .then((response) => {
          console.log("Response status:", response.status);
          return response.json();
        })
        .then((data) => {
          console.log("Registrations data:", data);
          apiResult.textContent = JSON.stringify(data, null, 2);
        })
        .catch((error) => {
          console.error("Error fetching registrations:", error);
          apiResult.textContent = "Error: " + error;
        });
    };

    // Load events function
    function loadEvents(events) {
      eventsTable.innerHTML = "";

      if (events.length === 0) {
        eventsTable.innerHTML =
          '<tr><td colspan="2" class="text-center">No events found</td></tr>';
        return;
      }

      events.forEach((event) => {
        const row = document.createElement("tr");
        row.innerHTML = `
          <td>${event.name}</td>
          <td>
            <button type="button" class="btn btn-sm btn-primary" onclick="viewRegistrations('${
              event.id
            }')">
              View Registrations (${event.total_registrations || 0})
            </button>
          </td>
        `;
        eventsTable.appendChild(row);
      });
    }

    // Auto-run test on page load
    setTimeout(testApiCall, 500);
  });
</script>
