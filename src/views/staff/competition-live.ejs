        if (teamKicksElement) {
          const kicksText = teamKicksElement.textContent;
          const currentKicks = parseInt(kicksText.split('/')[0]) || 0;
          teamKicksElement.textContent = `${currentKicks}/${maxKicks}`;
        }
      }

