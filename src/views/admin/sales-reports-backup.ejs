    }
  }
</style>

<script>
  // Real-time sales tracking functionality
  let updateInterval;

  // Load sales tracking data from API
  async function loadSalesTrackingData() {
    try {
      const refreshBtn = document.getElementById('refresh-btn');
      const lastUpdateSpan = document.getElementById('last-update');

      // Disable refresh button during loading
      if (refreshBtn) {
        refreshBtn.disabled = true;
        refreshBtn.innerHTML = '<i class="bi bi-arrow-clockwise"></i> Loading...';
      }

      const response = await fetch('/admin/api/sales-tracking');
      const data = await response.json();

      if (data.success) {
        updateSalesTrackingTable(data.salesData);

        // Update last update time
        if (lastUpdateSpan) {
          const now = new Date();
          lastUpdateSpan.textContent = `Updated: ${now.toLocaleTimeString()}`;
          lastUpdateSpan.className = 'badge bg-success me-2';
        }
      } else {
        console.error('Failed to load sales tracking data:', data.message);
        if (lastUpdateSpan) {
          lastUpdateSpan.textContent = 'Update failed';
          lastUpdateSpan.className = 'badge bg-danger me-2';
        }
      }
    } catch (error) {
      console.error('Error loading sales tracking data:', error);
      const lastUpdateSpan = document.getElementById('last-update');
      if (lastUpdateSpan) {
        lastUpdateSpan.textContent = 'Error';
        lastUpdateSpan.className = 'badge bg-danger me-2';
      }
    } finally {
      // Re-enable refresh button
      const refreshBtn = document.getElementById('refresh-btn');
      if (refreshBtn) {
        refreshBtn.disabled = false;
        refreshBtn.innerHTML = '<i class="bi bi-arrow-clockwise"></i> Refresh';
      }
    }
  }

  // Update the sales tracking table with new data
  function updateSalesTrackingTable(salesData) {
    const tbody = document.getElementById('live-sales-tbody');
    if (!tbody) return;

    tbody.innerHTML = '';

    if (salesData && salesData.length > 0) {
      salesData.forEach(staff => {
        const row = document.createElement('tr');

        // Determine role badge color
        let roleBadgeClass = 'bg-secondary';
        if (staff.role === 'admin') roleBadgeClass = 'bg-danger';
        else if (staff.role === 'staff') roleBadgeClass = 'bg-primary';
        else if (staff.role === 'sales') roleBadgeClass = 'bg-success';

        row.innerHTML = `
          <td>
            <div class="d-flex align-items-center">
              <div class="avatar-circle me-2">
                ${staff.staff_name.charAt(0).toUpperCase()}
              </div>
              <div>
                <strong>${staff.staff_name}</strong>
                <br>
                <span class="badge ${roleBadgeClass} small">
                  ${staff.role.charAt(0).toUpperCase() + staff.role.slice(1)}
                </span>
              </div>
            </div>
          </td>
          <td>
            <div class="d-flex justify-content-between align-items-center">
              <span class="badge bg-info me-1">${staff.customers_today} customers</span>
              <strong class="text-success">$${parseFloat(staff.revenue_today || 0).toFixed(2)}</strong>
            </div>
          </td>
          <td>
            <div class="d-flex justify-content-between align-items-center">
              <span class="badge bg-info me-1">${staff.customers_week} customers</span>
              <strong class="text-success">$${parseFloat(staff.revenue_week || 0).toFixed(2)}</strong>
            </div>
          </td>
          <td>
            <div class="d-flex justify-content-between align-items-center">
              <span class="badge bg-info me-1">${staff.customers_month} customers</span>
              <strong class="text-success">$${parseFloat(staff.revenue_month || 0).toFixed(2)}</strong>
            </div>
          </td>
        `;

        tbody.appendChild(row);
      });
    } else {
      const row = document.createElement('tr');
      row.innerHTML = `
        <td colspan="4" class="text-center py-4">
          <div class="text-muted">
            <i class="bi bi-inbox display-4 d-block mb-2"></i>
            <p>No staff sales data available.</p>
          </div>
        </td>
      `;
      tbody.appendChild(row);
    }
  }

  // Initialize when page loads
  document.addEventListener('DOMContentLoaded', function() {
    // Load initial data
    loadSalesTrackingData();

    // Set up auto-refresh every 10 seconds
    updateInterval = setInterval(loadSalesTrackingData, 10000);

    // Auto-refresh legacy table every 30 seconds for today's view
    <% if (period === 'today') { %>
      setInterval(function() {
        // Only auto-refresh if user is viewing today's data
        if (document.visibilityState === 'visible') {
          location.reload();
        }
      }, 30000); // 30 seconds
    <% } %>

    // Stop auto-refresh when user leaves the page
    document.addEventListener('visibilitychange', function() {
      if (document.visibilityState === 'hidden') {
        if (updateInterval) {
          clearInterval(updateInterval);
        }
      } else {
        // Resume auto-refresh when user comes back
        if (!updateInterval) {
          updateInterval = setInterval(loadSalesTrackingData, 10000);
        }
        // Load fresh data immediately
        loadSalesTrackingData();
      }
    });
  });

  // Clean up interval when page unloads
  window.addEventListener('beforeunload', function() {
    if (updateInterval) {
      clearInterval(updateInterval);
    }
  });
</script>
