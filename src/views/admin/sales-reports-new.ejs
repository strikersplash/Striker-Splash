<div class="container-fluid mt-4">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
      <div class="position-sticky pt-3">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link" href="/admin/dashboard">
              <i class="bi bi-speedometer2"></i> Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/staff">
              <i class="bi bi-people"></i> Manage Staff
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/players">
              <i class="bi bi-person-badge"></i> Manage Players
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/admin/sales-reports">
              <i class="bi bi-graph-up"></i> Sales Reports
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/tickets">
              <i class="bi bi-ticket-perforated"></i> Ticket Management
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/raffle">
              <i class="bi bi-trophy"></i> Daily Raffle
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/admin/event-locations">
              <i class="bi bi-calendar-event"></i> Event Locations
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Main Content -->
    <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div
        class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
      >
        <h1 class="h2">
          <i class="bi bi-graph-up me-2"></i>Live Staff Sales Tracking
        </h1>
      </div>

      <!-- Flash Messages -->
      <% if(typeof messages != 'undefined'){ %> <% if(messages.success_msg){ %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= messages.success_msg %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %> <% if(messages.error_msg){ %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= messages.error_msg %>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
      </div>
      <% } %> <% } %>

      <!-- Real-Time Staff Sales Tracking -->
      <div class="card shadow mb-4" id="real-time-tracking">
        <div
          class="card-header py-3 d-flex justify-content-between align-items-center"
        >
          <h6 class="m-0 font-weight-bold text-success">
            <i class="bi bi-activity me-2"></i>Live Staff Sales Tracking
          </h6>
          <div class="d-flex align-items-center">
            <span id="last-update" class="badge bg-success me-2"
              >Loading...</span
            >
            <button
              id="refresh-btn"
              class="btn btn-sm btn-outline-success"
              onclick="loadSalesTrackingData()"
            >
              <i class="bi bi-arrow-clockwise"></i> Refresh
            </button>
          </div>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover" id="live-sales-table">
              <thead class="table-success">
                <tr>
                  <th><i class="bi bi-person me-1"></i>Staff Name</th>
                  <th><i class="bi bi-calendar-day me-1"></i>Today</th>
                  <th><i class="bi bi-calendar-week me-1"></i>This Week</th>
                  <th><i class="bi bi-calendar-month me-1"></i>This Month</th>
                </tr>
              </thead>
              <tbody id="live-sales-tbody">
                <tr>
                  <td colspan="4" class="text-center">
                    <div class="spinner-border text-success" role="status">
                      <span class="visually-hidden">Loading...</span>
                    </div>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
          <div class="row mt-3">
            <div class="col-md-12">
              <small class="text-muted">
                <i class="bi bi-info-circle me-1"></i>
                Auto-updates every 10 seconds. Shows customers served and
                revenue for each staff member.
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .avatar-circle {
    width: 35px;
    height: 35px;
    border-radius: 50%;
    background: linear-gradient(45deg, #007bff, #0056b3);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 14px;
  }

  .card {
    transition: transform 0.2s ease-in-out;
  }

  .card:hover {
    transform: translateY(-2px);
  }

  #live-sales-table tbody tr {
    transition: background-color 0.3s ease;
  }

  #live-sales-table tbody tr:hover {
    background-color: rgba(0, 123, 255, 0.1) !important;
  }

  .table-success th {
    background-color: #198754;
    color: white;
    border-color: #198754;
  }

  @media (max-width: 768px) {
    .btn-toolbar {
      flex-direction: column;
    }

    .btn-group {
      width: 100%;
      margin-bottom: 10px;
    }

    .col-xl-3,
    .col-lg-6,
    .col-md-6 {
      flex: 0 0 100% !important;
      max-width: 100% !important;
    }
  }
</style>

<script>
  // Real-time sales tracking functionality
  let updateInterval;

  // Load sales tracking data from API
  async function loadSalesTrackingData() {
    try {
      const refreshBtn = document.getElementById("refresh-btn");
      const lastUpdateSpan = document.getElementById("last-update");

      // Disable refresh button during loading
      if (refreshBtn) {
        refreshBtn.disabled = true;
        refreshBtn.innerHTML =
          '<i class="bi bi-arrow-clockwise"></i> Loading...';
      }

      console.log("Fetching sales tracking data...");
      const response = await fetch("/admin/api/sales-tracking");
      const data = await response.json();

      console.log("Sales tracking response:", data);

      if (data.success) {
        updateSalesTrackingTable(data.salesData);

        // Update last update time
        if (lastUpdateSpan) {
          const now = new Date();
          lastUpdateSpan.textContent = `Updated: ${now.toLocaleTimeString()}`;
          lastUpdateSpan.className = "badge bg-success me-2";
        }
      } else {
        console.error("Failed to load sales tracking data:", data.message);
        if (lastUpdateSpan) {
          lastUpdateSpan.textContent = "Update failed";
          lastUpdateSpan.className = "badge bg-danger me-2";
        }
      }
    } catch (error) {
      console.error("Error loading sales tracking data:", error);
      const lastUpdateSpan = document.getElementById("last-update");
      if (lastUpdateSpan) {
        lastUpdateSpan.textContent = "Error";
        lastUpdateSpan.className = "badge bg-danger me-2";
      }
    } finally {
      // Re-enable refresh button
      const refreshBtn = document.getElementById("refresh-btn");
      if (refreshBtn) {
        refreshBtn.disabled = false;
        refreshBtn.innerHTML = '<i class="bi bi-arrow-clockwise"></i> Refresh';
      }
    }
  }

  // Update the sales tracking table with new data
  function updateSalesTrackingTable(salesData) {
    console.log("Updating table with data:", salesData);
    const tbody = document.getElementById("live-sales-tbody");
    if (!tbody) return;

    tbody.innerHTML = "";

    if (salesData && salesData.length > 0) {
      salesData.forEach((staff) => {
        const row = document.createElement("tr");

        // Determine role badge color
        let roleBadgeClass = "bg-secondary";
        if (staff.role === "admin") roleBadgeClass = "bg-danger";
        else if (staff.role === "staff") roleBadgeClass = "bg-primary";
        else if (staff.role === "sales") roleBadgeClass = "bg-success";

        row.innerHTML = `
          <td>
            <div class="d-flex align-items-center">
              <div class="avatar-circle me-2">
                ${staff.staff_name.charAt(0).toUpperCase()}
              </div>
              <div>
                <strong>${staff.staff_name}</strong>
                <br>
                <span class="badge ${roleBadgeClass} small">
                  ${staff.role.charAt(0).toUpperCase() + staff.role.slice(1)}
                </span>
              </div>
            </div>
          </td>
          <td>
            <div class="d-flex justify-content-between align-items-center">
              <span class="badge bg-info me-1">${
                staff.customers_today
              } customers</span>
              <strong class="text-success">$${parseFloat(
                staff.revenue_today || 0
              ).toFixed(2)}</strong>
            </div>
          </td>
          <td>
            <div class="d-flex justify-content-between align-items-center">
              <span class="badge bg-warning me-1">${
                staff.customers_week
              } customers</span>
              <strong class="text-primary">$${parseFloat(
                staff.revenue_week || 0
              ).toFixed(2)}</strong>
            </div>
          </td>
          <td>
            <div class="d-flex justify-content-between align-items-center">
              <span class="badge bg-secondary me-1">${
                staff.customers_month
              } customers</span>
              <strong class="text-info">$${parseFloat(
                staff.revenue_month || 0
              ).toFixed(2)}</strong>
            </div>
          </td>
        `;
        tbody.appendChild(row);
      });
    } else {
      const row = document.createElement("tr");
      row.innerHTML = `
        <td colspan="4" class="text-center text-muted py-4">
          <i class="bi bi-info-circle me-2"></i>No staff sales data available
        </td>
      `;
      tbody.appendChild(row);
    }
  }

  // Auto-refresh functionality
  function startAutoRefresh() {
    // Load data immediately
    loadSalesTrackingData();

    // Set up interval for auto-refresh every 10 seconds
    updateInterval = setInterval(loadSalesTrackingData, 10000);
  }

  function stopAutoRefresh() {
    if (updateInterval) {
      clearInterval(updateInterval);
    }
  }

  // Handle page visibility for auto-refresh
  document.addEventListener("visibilitychange", function () {
    if (document.hidden) {
      stopAutoRefresh();
    } else {
      startAutoRefresh();
    }
  });

  // Start auto-refresh when page loads
  document.addEventListener("DOMContentLoaded", function () {
    startAutoRefresh();
  });

  // Clean up when leaving page
  window.addEventListener("beforeunload", function () {
    stopAutoRefresh();
  });
</script>
