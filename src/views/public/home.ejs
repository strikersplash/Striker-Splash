<!-- Hero Section -->
<div class="bg-primary text-white py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6">
        <h1 class="display-4 fw-bold">Striker Splash</h1>
        <p class="lead">Test your football skills and compete for prizes!</p>
        <p>Join our football challenge and see if you have what it takes to top the leaderboard.</p>
        <a href="/leaderboard" class="btn btn-light btn-lg">View Leaderboard</a>
        <a href="/auth/register" class="btn btn-outline-light btn-lg ms-2">Register Now</a>
      </div>
      <div class="col-md-6">
        <img src="/images/hero-image.jpg" alt="Striker Splash" class="img-fluid rounded">
      </div>
    </div>
  </div>
</div>

<!-- Features Section -->
<div class="container my-5">
  <div class="row text-center">
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <i class="bi bi-trophy text-primary" style="font-size: 3rem;"></i>
          <h3 class="my-3">Compete</h3>
          <p>Challenge yourself against other players and climb the leaderboard rankings.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <i class="bi bi-graph-up text-primary" style="font-size: 3rem;"></i>
          <h3 class="my-3">Track Progress</h3>
          <p>Monitor your performance and see your improvement over time.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <i class="bi bi-gift text-primary" style="font-size: 3rem;"></i>
          <h3 class="my-3">Win Prizes</h3>
          <p>Top performers can win exciting prizes and recognition.</p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Upcoming Events -->
<div class="bg-light py-5">
  <div class="container">
    <h2 class="text-center mb-4">Upcoming Events</h2>
    <div class="row">
      <% if (events && events.length > 0) { %>
        <% events.forEach(event => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <div class="card-body">
                <h5 class="card-title"><%= event.name %></h5>
                <h6 class="card-subtitle mb-2 text-muted">
                  <%= new Date(event.event_date).toLocaleDateString() %>
                </h6>
                <p class="card-text"><%= event.description %></p>
                <p><strong>Location:</strong> <%= event.location %></p>
              </div>
              <div class="card-footer">
                <a href="/events/<%= event.id %>" class="btn btn-primary">Learn More</a>
              </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="col-12 text-center">
          <p>No upcoming events at this time. Check back soon!</p>
        </div>
      <% } %>
    </div>
  </div>
</div>

