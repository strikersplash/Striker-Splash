<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Initialize Flatpickr with mobile-optimized settings
    flatpickr("#dob", {
      dateFormat: "Y-m-d",
      maxDate: new Date(),
      disableMobile: true, // Force our custom UI on mobile
      static: true,
      monthSelectorType: "dropdown",
      yearSelectorType: "dropdown",
      defaultDate: new Date().toISOString().split("T")[0], // Set current date as default
      // Create a more intuitive mobile interface
      onOpen: function (selectedDates, dateStr, instance) {
        // Create year range for quick selection
        const currentYear = new Date().getFullYear();
        const startYear = currentYear - 100; // Allow registration for people up to 100 years old
        const yearSelect = document.createElement("select");
        yearSelect.className = "year-select";

        for (let year = currentYear; year >= startYear; year--) {
          const option = document.createElement("option");
          option.value = year;
          option.text = year;
          if (year === currentYear) option.selected = true; // Set current year as default
          yearSelect.appendChild(option);
        }

        // Create wrapper for year selector
        const wrapper = document.createElement("div");
        wrapper.className = "year-select-wrapper";
        wrapper.appendChild(yearSelect);

        // Add year selector at the top of the calendar
        const calendar = instance.calendarContainer;
        calendar.insertBefore(wrapper, calendar.firstChild);

        // Handle year changes
        yearSelect.addEventListener("change", function () {
          const date = instance.selectedDates[0] || new Date();
          date.setFullYear(this.value);
          instance.setDate(date);
        });
      },
      onChange: function (selectedDates, dateStr, instance) {
        // Update year selector when date changes
        const yearSelect =
          instance.calendarContainer.querySelector(".year-select");
        if (yearSelect && selectedDates[0]) {
          yearSelect.value = selectedDates[0].getFullYear();
        }
      },
    });
    // Photo preview functionality
    const photoInput = document.getElementById("photo");
    const photoPreview = document.getElementById("photo-preview");

    photoInput.addEventListener("change", function (event) {
      const file = event.target.files[0];

      if (file) {
        // Check file size (5MB limit)
        if (file.size > 5 * 1024 * 1024) {
          alert("File size must be less than 5MB");
          photoInput.value = "";
          photoPreview.style.display = "none";
          return;
        }

        // Check file type
        if (!file.type.match(/^image\/(jpeg|jpg|png|gif)$/)) {
          alert("Please select a valid image file (JPG, PNG, or GIF)");
          photoInput.value = "";
          photoPreview.style.display = "none";
          return;
        }

        // Create preview
        const reader = new FileReader();
        reader.onload = function (e) {
          photoPreview.src = e.target.result;
          photoPreview.style.display = "block";
        };
        reader.readAsDataURL(file);
      } else {
        photoPreview.style.display = "none";
      }
    });

    // Phone number preview functionality
    const countryCodeSelect = document.getElementById("countryCode");
    const phoneInput = document.getElementById("phone");
    const phoneHelper = document.getElementById("phone-helper");

    function updatePhonePreview() {
      const countryCode = countryCodeSelect.value;
      const phoneNumber = phoneInput.value;

      if (countryCode && phoneNumber) {
        const fullNumber = countryCode + phoneNumber;
        phoneHelper.innerHTML = `Complete phone number: <strong>${fullNumber}</strong><br>Select your country code and enter your phone number (without the country code)`;
      } else {
        phoneHelper.textContent =
          "Select your country code and enter your phone number (without the country code)";
      }
    }

    countryCodeSelect.addEventListener("change", updatePhonePreview);
    phoneInput.addEventListener("input", updatePhonePreview);

    // Child registration functionality
    const isChildAccountCheckbox = document.getElementById("isChildAccount");

    isChildAccountCheckbox.addEventListener("change", function () {
      updateChildRegistrationHelper();
    });

    function updateChildRegistrationHelper() {
      const countryCode = countryCodeSelect.value;
      const phoneNumber = phoneInput.value;
      const isChild = isChildAccountCheckbox.checked;

      if (isChild) {
        let baseText = `<strong>Parent Registration:</strong> Use your own phone number. 
          Your child will get a unique login ID ending with C1 (or C2 for additional children).`;

        if (countryCode && phoneNumber) {
          const fullNumber = countryCode + phoneNumber;
          baseText += `<br><small class="text-info">Your child's login ID will be: <strong>${fullNumber}-C1</strong></small>`;
        }

        baseText += `<br><small class="text-success">âœ“ Child account indicator will be shown on the profile</small>`;
        baseText += `<br><small class="text-muted"><em>Regular accounts use just the phone number as login ID (e.g., +5011234567)</em></small>`;
        phoneHelper.innerHTML = baseText;
        phoneHelper.classList.add("text-success");
      } else {
        updatePhonePreview();
        phoneHelper.classList.remove("text-success");
      }
    }

    // Update phone preview when inputs change, considering child registration
    function updatePhonePreview() {
      if (isChildAccountCheckbox.checked) {
        updateChildRegistrationHelper();
        return;
      }

      const countryCode = countryCodeSelect.value;
      const phoneNumber = phoneInput.value;

      if (countryCode && phoneNumber) {
        const fullNumber = countryCode + phoneNumber;
        phoneHelper.innerHTML = `Complete phone number: <strong>${fullNumber}</strong><br>Select your country code and enter your phone number (without the country code)`;
      } else {
        phoneHelper.textContent =
          "Select your country code and enter your phone number (without the country code)";
      }
    }
  });
</script>
