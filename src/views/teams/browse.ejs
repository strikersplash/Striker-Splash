<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <div class="d-flex justify-content-between align-items-center">
            <h3 class="mb-0">Browse Teams</h3>
            <a href="/teams/create" class="btn btn-sm btn-light">Create Team</a>
          </div>
        </div>
        <div class="card-body">
          <% if (teams && teams.length > 0) { %>
            <div class="row">
              <% teams.forEach(team => { %>
                <div class="col-md-4 mb-4">
                  <div class="card h-100">
                    <div class="card-body">
                      <h5 class="card-title"><%= team.name %></h5>
                      <div class="d-flex justify-content-between mb-3">
                        <span><strong>Goals:</strong> <%= team.total_goals || 0 %></span>
                        <span><strong>Attempts:</strong> <%= team.total_attempts || 0 %></span>
                      </div>
                      <div class="progress mb-3">
                        <div class="progress-bar" role="progressbar" 
                             style="width: <%= team.total_attempts ? (team.total_goals / team.total_attempts) * 100 : 0 %>%;" 
                             aria-valuenow="<%= team.total_attempts ? (team.total_goals / team.total_attempts) * 100 : 0 %>" 
                             aria-valuemin="0" 
                             aria-valuemax="100">
                          <%= team.total_attempts ? ((team.total_goals / team.total_attempts) * 100).toFixed(1) : 0 %>%
                        </div>
                      </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                      <a href="/teams/dashboard/<%= team.id %>" class="btn btn-sm btn-primary">View Team</a>
                      <form action="/teams/join/<%= team.id %>" method="POST">
                        <button type="submit" class="btn btn-sm btn-success">Join Team</button>
                      </form>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          <% } else { %>
            <div class="alert alert-info">
              <p class="mb-0">No teams found. Be the first to create a team!</p>
            </div>
            <div class="text-center">
              <a href="/teams/create" class="btn btn-primary">Create Team</a>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>